<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="일일미션"
        android:textSize="25dp"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/mission_color_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/missonStamp1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginRight="25dp"
                android:background="@drawable/mission_stamp_background1"/>
            <TextView
                android:id="@+id/missonStamp2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="2"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginRight="25dp"
                android:background="@drawable/mission_stamp_background1"/>
            <TextView
                android:id="@+id/missonStamp3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="3"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginRight="25dp"
                android:background="@drawable/mission_stamp_background1"/>
            <TextView
                android:id="@+id/missonStamp4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="4"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/mission_stamp_background1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/missonStamp5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="5"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginRight="25dp"
                android:background="@drawable/mission_stamp_background1"/>
            <TextView
                android:id="@+id/missonStamp6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="6"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginRight="25dp"
                android:background="@drawable/mission_stamp_background1"/>
            <TextView
                android:id="@+id/missonStamp7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="7"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/mission_stamp_background1"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mission_color_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="이번 주 미션 완료 시 보상"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/missonRewardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="보상 내용"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btnDay1"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Day 01"
                android:layout_weight="1"
                android:layout_marginRight="3dp"/>

            <Button
                android:id="@+id/btnDay2"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Day 02"
                android:layout_weight="1"
                android:layout_marginLeft="3dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <Button
                android:id="@+id/btnDay3"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Day 03"
                android:layout_weight="1"
                android:layout_marginRight="3dp"/>

            <Button
                android:id="@+id/btnDay4"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Day 04"
                android:layout_weight="1"
                android:layout_marginLeft="3dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btnDay5"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Day 05"
                android:layout_weight="1"
                android:layout_marginRight="3dp" />

            <Button
                android:id="@+id/btnDay6"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Day 06"
                android:layout_weight="1"
                android:layout_marginLeft="3dp" />

        </LinearLayout>
        <Button
            android:id="@+id/btnDay7"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:text="Day 07" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>