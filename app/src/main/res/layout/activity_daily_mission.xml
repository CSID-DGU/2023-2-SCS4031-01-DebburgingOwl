<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="일일미션"
            android:textSize="25dp"
            android:padding="15dp"
            android:layout_marginBottom="10dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mission_color_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="미션 완료 시 보상"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/missonRewardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="보상 내용"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/missionBtn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="운동해요"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"/>

                <Button
                    android:id="@+id/missionBtn2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="커피 한 잔 해요"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

                <Button
                    android:id="@+id/missionBtn3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="mission 3"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"/>

                <Button
                    android:id="@+id/missionBtn4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="mission 4"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/missionBtn5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="mission 5"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp" />

                <Button
                    android:id="@+id/missionBtn6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="mission 6"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp" />

            </LinearLayout>

            <Button
                android:id="@+id/missionBtn7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="mission 7" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>